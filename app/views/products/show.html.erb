    <div class="container main-container">
        <div class="row">
        	<div class="col-lg-3 col-md-3 col-sm-12">

				<!-- Best Seller -->
				<%= render "shared/best_seller" %>
				<!-- End Best Seller -->

        	</div>

        	<div class="clearfix visible-sm"></div>

			<!-- Product Detail -->
        	<div class="col-lg-9 col-md-9 col-sm-12">
        		<div class="col-lg-12 col-sm-12">
            		<span class="title"><%= @product.name %></span>
            	</div>
	            <div class="col-lg-12 col-sm-12 hero-feature">
            		<div class="sp-wrap">
						<a href="images/detail1.jpg"><img src="images/detail1-s.jpg" alt=""></a>
						<a href="images/detail2.jpg"><img src="images/detail2-s.jpg" alt=""></a>
						<a href="images/detail3.jpg"><img src="images/detail3-s.jpg" alt=""></a>
						<a href="images/detail1.jpg"><img src="images/detail1-s.jpg" alt=""></a>
						<a href="images/detail2.jpg"><img src="images/detail2-s.jpg" alt=""></a>
					</div>
					<h4><%= @product.name %></h4>

					<hr/>
					<%= @product.long_description %>
					<hr/>
					<h3><%= humanized_money_with_symbol @product.variants.last.price %></h3>
					<% @product.products_colors.each do |pc| %>
						<div>
	
							<% pc.variants.each do |variant| %>
								<%= form_tag add_to_cart_checkout_path, method: :post do %>
								<div class="input-qty-detail">
									<%= text_field_tag "quantity", "1", class: "form-control input-qty text-center" %>
								</div>
								<%= hidden_field_tag "variant_id", variant.id %>
								<%= submit_tag "Add to cart", class: "btn btn-primary pull-left" %>
								<% end %>
							<% end %>
						</div>
					<% end %>

					<br/>
					<hr/>
					<div class="addthis_toolbox addthis_default_style addthis_32x32_style">
						<a class="addthis_button_preferred_1"></a>
						<a class="addthis_button_preferred_2"></a>
						<a class="addthis_button_preferred_3"></a>
						<a class="addthis_button_preferred_4"></a>
						<a class="addthis_button_compact"></a>
					</div>
					<script type="text/javascript" src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=xa-4f0c254f1302adf8"></script>
	            </div>
	            <div class="clearfix"></div>
							<% if !@product.collections.empty? && !(@product.collections.first.products - [@product]).empty? %>
	            <div class="col-lg-12 col-sm-12">
            		<span class="title">RELATED PRODUCTS</span>
            	</div>

							<% (@product.collections.first.products - [@product]).each do |product| %>
            	<div class="col-lg-4 col-sm-4 hero-feature text-center">
	                <%= render partial: "shared/product_thumbnail", locals: {product: product} %>
	            </div>
							<% end %>
							
	            
        	</div>
					<% end %>
        	<!-- End Product Detail -->


        </div>
	</div>


