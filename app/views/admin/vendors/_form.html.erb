<%= form_for [:admin, @vendor] do |form| %>
	<ul>
		<% @vendor.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>

	<div>
		<%= form.label :name %>
		<%= form.text_field :name %>
	</div>

	<div>
		<%= form.label :email %>
		<%= form.text_field :email %>
	</div>
	
	<div>
		<%= form.label :street_address %>
		<%= form.text_field :street_address %>
	</div>
	
	<div>
		<%= form.label :street_address2, "Suite/Apt" %>
		<%= form.text_field :street_address2 %>
	</div>
	
	<div>
		<%= form.label :city %>
		<%= form.text_field :city %>
	</div>
	
	<div>
		<%= form.label :state_id, "State" %>
		<%= form.collection_select :state_id, State.all, :id, :short_name %>
	</div>
	
	<div>
		<%= form.label :zip_code %>
		<%= form.text_field :zip_code %>
	</div>
	
	
	<%= form.submit %>
<% end %>